<% if (locals.build) { %>
	<link rel="stylesheet" href="css/pagination.css" />
	<% } else if (locals.dynamic) { %>
	<link rel="stylesheet" href="../css/pagination.css" />
	<% } else { %>
	<link rel="stylesheet" href="/css/pagination.css" />
	<% } %> <%#
	<!-- First page pagination -->
	%> <% if (firstPage && lastPage > 0) { %>
	<nav aria-label="pagination">
		<ul class="pagination">
			<li>
				<a <% if (locals.build) { %>
					href="/page/<%= lastPage %>.html" <% } else { %> href="/page/<%= lastPage %>" <% } %> title="Last page"
					aria-label="Go to the last page of the blog">
					<span aria-hidden="true">
						<% if (locals.build) { %>
						<img src="icons/chevron-left.svg" alt="Last page" />
						<% } else { %>
						<img src="/icons/chevron-left.svg" alt="Last page" />
						<% } %>
					</span>
					<span class="hidden">Go to the last page of the blog</span>
				</a>
			</li>
			<li>
				<a class="btn default prev" role="button" <% if (locals.build) { %>
					href="/page/1.html" <% } else { %> href="/page/1" <% } %> aria-label="Go to the previous set of posts">
					<span aria-hidden="true">Older Posts</span>
					<span class="hidden">Go to the previous set of posts</span>
				</a>
			</li>
		</ul>
	</nav>
	<% } %> <%#
	<!-- Other pages pagination -->
	%> <% if (!firstPage) { %>
	<nav aria-label="pagination">
		<ul class="pagination">
			<%#
			<!-- Older posts -->
			%> <% if (paginatedPostsList.next_page) { %>
			<li>
				<a <% if (locals.dynamic) { %>
					href="/page/<%= lastPage %>.html" <% } else { %> href="/page/<%= lastPage %>" <% } %> title="Last page"
					aria-label="Go to the last page of the blog">
					<span aria-hidden="true">
						<% if (locals.build) { %>
						<img src="icons/chevron-left.svg" alt="Last page" />
						<% } else if (locals.dynamic) { %>
						<img src="../icons/chevron-left.svg" alt="Last page" />
						<% } else { %>
						<img src="/icons/chevron-left.svg" alt="Last page" />
						<% } %>
					</span>
					<span class="hidden">Go to the last page of the blog</span>
				</a>
			</li>
			<li>
				<a class="btn default prev" role="button" <% if (locals.dynamic) { %>
					href="/page/<%=paginatedPostsList.next_page%>.html" <% } else { %>
					href="/page/<%=paginatedPostsList.next_page%>" <% } %> aria-label="Go to the previous set of posts" >
					<span aria-hidden="true">Older Posts</span>
					<span class="hidden">Go to the previous set of posts</span>
				</a>
			</li>
			<% } %> <%#
			<!-- Newer posts -->
			%> <% if (paginatedPostsList.prev_page) { %>
			<li>
				<a class="btn default next" role="button" <% if (locals.dynamic) { %>
					href="/page/<%=paginatedPostsList.prev_page%>.html" <% } else { %>
					href="/page/<%=paginatedPostsList.prev_page%>" <% } %> aria-label="Go to the next set of posts" >
					<span aria-hidden="true">Newer Posts</span>
					<span class="hidden">Go to the next set of posts</span>
				</a>
			</li>
			<li>
				<a href="/" title="First page" aria-label="Go to the first page of the blog">
					<span aria-hidden="true">
						<% if (locals.build) { %>
						<img src="icons/chevron-right.svg" alt="First page" />
						<% } else if (locals.dynamic) { %>
						<img src="../icons/chevron-right.svg" alt="First page" />
						<% } else { %>
						<img src="/icons/chevron-right.svg" alt="First page" />
						<% } %>
					</span>
					<span class="hidden">Go to the first page of the blog</span>
				</a>
			</li>
			<% } else { %>
			<li>
				<a class="btn default next" role="button" href="/" aria-label="Go to the next set of posts">
					<span aria-hidden="true">Newer Posts</span>
					<span class="hidden">Go to the next set of posts</span>
				</a>
			</li>
			<li>
				<a href="/" title="First page" aria-label="Go to the first page of the blog">
					<span aria-hidden="true">
						<% if (locals.build) { %>
						<img src="icons/chevron-right.svg" alt="First page" />
						<% } else if (locals.dynamic) { %>
						<img src="../icons/chevron-right.svg" alt="First page" />
						<% } else { %>
						<img src="/icons/chevron-right.svg" alt="First page" />
						<% } %>
					</span>
					<span class="hidden">Go to the first page of the blog</span>
				</a>
			</li>
			<% } %>
		</ul>
	</nav>
	<% } %>
	